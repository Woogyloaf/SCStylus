// ***********************************
// BASE
// ***********************************
html
  box-sizing: border-box
*, *:before, *:after
  box-sizing: inherit
html
  overflow-y: scroll
body
  color: $body-text
  margin: 0
  padding: 0
  background: #f5f5f5
  font-weight: $font-weight-body
  font-family: $font-family-primary
  // media query mixin, see _mixins.scss
  desktop()
hr
  border: solid #DDDDDD
  border-width: 1px 0 0
  clear: both
  height: 0
  margin: 40px 0

for $i in 1..4
  .sprite-santa-{$i}
    sprite($s-santa-claus-2)
    background-color orange - (100 / $i)


// ***********************************
// Reset CSS
// ***********************************

// Box sizing
*
  box-sizing: border-box

// Remove margins and paddings
html, body, div, span, applet, object, iframe,
h1, h2, h3, h4, h5, h6, p, blockquote, pre,
a, abbr, acronym, address, big, cite, code,
del, dfn, em, img, ins, kbd, q, s, samp,
small, strike, strong, sub, sup, tt, var,
b, u, i, center,
dl, dt, dd, ol, ul, li,
fieldset, form, label, legend,
table, caption, tbody, tfoot, thead, tr, th, td
  margin 0
  padding 0
  border 0
  font-size 100%
  font inherit
  vertical-align baseline

// Typography
body
  line-height 1

// Remove list styles on ul, ol elements
ul, ol
  list-style none

// Remove hyperlinks decoration
a
  text-decoration none

// Remove default form styles
button, input, select, textarea
  margin 0
  border 0
  font-size 100%
  font inherit
  vertical-align baseline

// Remove default button styles
button
  padding 0
  border none
  background none
  cursor pointer
  outline none

// Reset form elements for proper styling
input[type="text"],
input[type="password"],
input[type="email"],
input[type="number"],
textarea
  appearance none
  border-radius 0

// Clear floated elements
.clearfix::after
  content ""
  display table
  clear both
